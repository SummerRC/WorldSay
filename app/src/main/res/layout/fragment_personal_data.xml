<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_grey">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#9B9B9B"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_1" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="NMIK"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/transparen" />

            <RelativeLayout
                android:id="@+id/edit_nike_name"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:text="昵称"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/personal_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="82dp"
                    android:layout_marginRight="60dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:text="NMIK"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="编辑"
                    android:textColor="#b5b5b5"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/edit_user_sex"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:text="性别"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="82dp"
                    android:text="女"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/set_sex_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/icon_more_btn" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/edit_user_email"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:text="邮箱"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/personal_et_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="82dp"
                    android:background="@null"
                    android:text="12345678@qq.com"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/icon_more_btn" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/edit_user_location"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:text="地点"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="82dp"
                    android:text="北京  朝阳区"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/icon_more_btn" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/edit_user_birthday"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:text="生日"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="82dp"
                    android:text="1991年6月27日"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/icon_more_btn" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/transparen" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <LinearLayout
                android:id="@+id/ll_edit_add_work_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/edit_add_work_message"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="#d8d8d8" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:text="添加工作信息"
                        android:textColor="#9B9B9B"
                        android:textSize="15sp" />

                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/transparen" />
            <LinearLayout
                android:id="@+id/ll_edit_add_teach_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/edit_add_teach_message"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#d8d8d8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:text="添加教育信息"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />
            </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/transparen" />
            <LinearLayout
                android:id="@+id/ll_edit_add_language_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/edit_add_language_message"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#d8d8d8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:text="添加语言信息"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />
            </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/transparen" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/edit_add_visa_message"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:text="添加签证信息"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="@color/transparen" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="护照"
                    android:textColor="#9B9B9B"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_visa_boolean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="82dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>