<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_explore"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@color/default_image_gray" />

    <TextView
        android:id="@+id/tv_explore_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_explore"
        android:layout_toRightOf="@id/iv_explore"
        android:text="哈弗大学"
        android:textColor="@color/default_text_black"
        android:textSize="14sp" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/tv_explore_hot"
        android:layout_width="160dp"
        android:layout_height="10dp"
        android:padding="2dp"
        android:layout_below="@id/tv_explore_title"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/iv_explore"
        app:rcBackgroundColor="@color/progress_default"
        app:rcBackgroundPadding="0dp"
        app:rcBackgroundRadius="5dp"
        app:rcMax="100"
        app:rcProgress="50"
        app:rcProgressColor="@color/progress_highlight" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.8"
        android:textSize="10sp"
        android:layout_marginLeft="3dp"
        android:textColor="@color/default_image_gray"
        android:layout_toRightOf="@id/tv_explore_hot"
        android:layout_marginTop="-2dp"
        android:layout_alignTop="@id/tv_explore_hot"/>

    <TextView
        android:id="@+id/tv_explore_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_explore_hot"
        android:layout_toRightOf="@id/iv_explore"
        android:maxLines="3"
        android:layout_marginRight="6dp"
        android:text="哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学哈弗大学"
        android:textColor="@color/default_text_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美国留学"
        android:textSize="10sp"
        android:textColor="@color/default_image_gray"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/iv_explore"/>
</RelativeLayout>